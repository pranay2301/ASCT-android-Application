<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:textAlignment="center"

    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:text="Register"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/purple_200"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="@color/teal_200"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:hint="Email"
        android:textColorHint="@color/teal_200"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/inputNumberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/inputEmailAddress"
        android:hint="password"
        android:textColorHint="@color/teal_200"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/ConfirmPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/inputNumberPassword"
        android:hint="Confirm Password"
        android:textColorHint="@color/teal_200"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/ConfirmPassword2"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:textColor="@color/white"

        />


</RelativeLayout>